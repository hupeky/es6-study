{
    "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "module": "es6",

    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["node_modules", "build", "scripts", "webpack.config.js", "*.js"]
}
