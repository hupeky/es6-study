{
    
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [  "src", "./src/**/*.js", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "build", "scripts", "old", ".eslintrc.js",  "./old/**/*.js", "./old/**/*.ts", "./old/**/*.tsx"]
}